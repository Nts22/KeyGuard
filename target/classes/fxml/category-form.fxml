<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.passmanager.controller.CategoryFormController"
      spacing="20" prefWidth="350"
      styleClass="dialog-container">

    <padding>
        <Insets topRightBottomLeft="25"/>
    </padding>

    <!-- Título -->
    <Label fx:id="dialogTitle" text="Nueva Categoría" styleClass="dialog-title"/>

    <!-- Campo nombre -->
    <VBox spacing="8">
        <Label text="Nombre de la categoría" styleClass="field-label"/>
        <TextField fx:id="nameField" promptText="Ej: Redes Sociales, Bancos..."/>
    </VBox>

    <!-- Selector de icono -->
    <VBox spacing="8">
        <Label text="Icono (opcional)" styleClass="field-label"/>
        <ComboBox fx:id="iconCombo" promptText="Selecciona un icono" maxWidth="Infinity"/>
    </VBox>

    <!-- Mensaje de error -->
    <Label fx:id="errorLabel" styleClass="error-label" visible="false" managed="false"/>

    <!-- Botones -->
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button fx:id="cancelBtn" text="Cancelar" styleClass="button-secondary" onAction="#handleCancel"/>
        <Button fx:id="saveBtn" text="Guardar" onAction="#handleSave"/>
    </HBox>
</VBox>
