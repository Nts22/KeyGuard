<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.passmanager.controller.PasswordGeneratorController"
      spacing="20" style="-fx-background-color: white;"
      prefWidth="450">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <!-- Titulo -->
    <VBox spacing="5" alignment="CENTER">
        <Label text="Generador de Contraseñas" styleClass="dialog-title"/>
        <Label text="Crea contraseñas seguras y aleatorias" styleClass="dialog-subtitle"/>
    </VBox>

    <!-- Campo de contraseña generada -->
    <VBox spacing="8">
        <Label text="Contraseña generada" styleClass="field-label"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="passwordField" styleClass="generator-password-field"
                       HBox.hgrow="ALWAYS" editable="true"/>
            <Button text="Copiar" onAction="#handleCopy" styleClass="button-copy"/>
            <Button text="Generar" onAction="#handleGenerate" styleClass="generator-btn-refresh"/>
        </HBox>
    </VBox>

    <!-- Indicador de fortaleza -->
    <VBox spacing="6">
        <HBox alignment="CENTER_LEFT">
            <Label text="Fortaleza: " styleClass="field-label"/>
            <Label fx:id="strengthLabel" text="Fuerte" styleClass="strength-label"/>
        </HBox>
        <ProgressBar fx:id="strengthBar" progress="0.8" prefWidth="Infinity" maxWidth="Infinity"
                     styleClass="strength-progress"/>
    </VBox>

    <Separator/>

    <!-- Opciones -->
    <VBox spacing="15">
        <Label text="Opciones" styleClass="field-label" style="-fx-font-size: 14px;"/>

        <!-- Longitud -->
        <VBox spacing="8">
            <HBox alignment="CENTER_LEFT">
                <Label text="Longitud: "/>
                <Label fx:id="lengthLabel" text="16" style="-fx-font-weight: bold;"/>
                <Label text=" caracteres"/>
            </HBox>
            <Slider fx:id="lengthSlider" min="8" max="64" value="16"
                    showTickLabels="true" showTickMarks="true"
                    majorTickUnit="8" minorTickCount="3"
                    blockIncrement="1"/>
        </VBox>

        <!-- Checkboxes -->
        <VBox spacing="10">
            <CheckBox fx:id="lowercaseCheck" text="Minúsculas (a-z)" selected="true"/>
            <CheckBox fx:id="uppercaseCheck" text="Mayúsculas (A-Z)" selected="true"/>
            <CheckBox fx:id="digitsCheck" text="Números (0-9)" selected="true"/>
            <CheckBox fx:id="symbolsCheck" text="Símbolos (!@#$%...)" selected="true"/>
            <CheckBox fx:id="excludeAmbiguousCheck" text="Excluir caracteres ambiguos (0, O, l, 1, I)"/>
        </VBox>
    </VBox>

    <!-- Botones -->
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <padding>
            <Insets top="10"/>
        </padding>
        <Button text="Cancelar" onAction="#handleCancel" styleClass="dialog-btn-secondary" prefWidth="100"/>
        <Button text="Usar" onAction="#handleUse" styleClass="dialog-btn-primary" prefWidth="100"/>
    </HBox>
</VBox>
