                <Label fx:id="passwordLabel" text="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" styleClass="detail-value"/>
                <Button fx:id="togglePasswordBtn" text="ðŸ‘" onAction="#handleTogglePassword" styleClass="button-copy"/>
