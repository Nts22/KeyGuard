        <!-- URL -->
        <VBox fx:id="urlContainer" spacing="6">
            <Label text="URL" styleClass="field-label"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Hyperlink fx:id="urlLink" onAction="#handleOpenUrl"/>
                <Button text="Copiar" onAction="#handleCopyUrl" styleClass="button-copy"/>
            </HBox>
        </VBox>

        <!-- Notas -->
        <VBox fx:id="notesContainer" spacing="6">
            <Label text="Notas" styleClass="field-label"/>
            <Label fx:id="notesLabel" styleClass="detail-notes" wrapText="true"/>
