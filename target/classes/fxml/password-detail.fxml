        <!-- Usuario -->
        <VBox fx:id="usernameContainer" spacing="6">
            <Label text="Usuario" styleClass="field-label"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label fx:id="usernameLabel" styleClass="detail-value"/>
                <Button text="Copiar" onAction="#handleCopyUsername" styleClass="button-copy"/>
            </HBox>
        </VBox>

        <!-- Email -->
        <VBox fx:id="emailContainer" spacing="6">
            <Label text="Email" styleClass="field-label"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label fx:id="emailLabel" styleClass="detail-value"/>
                <Button text="Copiar" onAction="#handleCopyEmail" styleClass="button-copy"/>
            </HBox>
        </VBox>

        <!-- ContraseÃ±a -->
