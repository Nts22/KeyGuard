        </VBox>

        <!-- Fechas -->
        <VBox spacing="4" style="-fx-padding: 15 0 0 0;">
            <Separator/>
            <HBox spacing="20">
                <Label fx:id="createdAtLabel" styleClass="detail-date"/>
                <Label fx:id="updatedAtLabel" styleClass="detail-date"/>
            </HBox>
        </VBox>

        <!-- Botones -->
        <HBox spacing="15" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10"/>
            </padding>
