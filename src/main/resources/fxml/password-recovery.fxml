<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.passmanager.controller.PasswordRecoveryController"
      styleClass="login-container"
      alignment="CENTER"
      prefHeight="600" prefWidth="500">

    <VBox styleClass="login-card" spacing="20" alignment="CENTER">

        <!-- Logo/Título -->
        <VBox alignment="CENTER" spacing="8">
            <Text text="KeyGuard" styleClass="login-title"/>
            <Label text="Recuperar Cuenta" styleClass="login-subtitle"/>
        </VBox>

        <!-- Instrucciones -->
        <VBox spacing="5" style="-fx-background-color: #e7f3ff; -fx-background-radius: 8; -fx-padding: 15;">
            <Label text="Ingresa tu clave de recuperación para restablecer tu contraseña maestra."
                   style="-fx-font-size: 12px; -fx-text-fill: #004085;" wrapText="true"/>
        </VBox>

        <!-- Formulario -->
        <VBox spacing="15">

            <!-- Selección de usuario -->
            <VBox spacing="5">
                <Label text="Usuario" styleClass="field-label"/>
                <ComboBox fx:id="userCombo" maxWidth="Infinity"/>
            </VBox>

            <!-- Recovery Key -->
            <VBox spacing="5">
                <Label text="Clave de Recuperación" styleClass="field-label"/>
                <TextField fx:id="recoveryKeyField"
                          promptText="XXXX-XXXX-XXXX-XXXX-XXXX-XXXX"
                          style="-fx-font-family: 'Courier New', monospace;"/>
            </VBox>

            <!-- Nueva contraseña -->
            <VBox spacing="5">
                <Label text="Nueva Contraseña Maestra" styleClass="field-label"/>
                <PasswordField fx:id="newPasswordField" promptText="Mínimo 8 caracteres"/>
            </VBox>

            <!-- Confirmar contraseña -->
            <VBox spacing="5">
                <Label text="Confirmar Nueva Contraseña" styleClass="field-label"/>
                <PasswordField fx:id="confirmPasswordField" promptText="Confirma tu nueva contraseña"/>
            </VBox>

            <!-- Mensaje de error/éxito -->
            <Label fx:id="messageLabel" styleClass="error-label" visible="false"/>
        </VBox>

        <!-- Botones -->
        <VBox spacing="10" alignment="CENTER">
            <Button fx:id="recoverButton" text="Recuperar Cuenta" onAction="#handleRecover"
                    styleClass="login-btn-primary" prefWidth="280" prefHeight="40" defaultButton="true"/>
            <Button fx:id="backButton" text="Volver al Login" onAction="#handleBack"
                    styleClass="login-btn-secondary" prefWidth="280" prefHeight="40"/>
        </VBox>

    </VBox>
</VBox>
