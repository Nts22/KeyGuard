<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.passmanager.controller.PasswordHistoryDialogController"
      prefHeight="550" prefWidth="700"
      spacing="15"
      style="-fx-background-color: white;">

    <padding>
        <Insets topRightBottomLeft="25"/>
    </padding>

    <!-- Header -->
    <VBox spacing="6">
        <Label fx:id="titleLabel" styleClass="detail-title"/>
        <Label fx:id="countLabel" styleClass="detail-category"/>
    </VBox>

    <Separator/>

    <!-- Info -->
    <HBox alignment="CENTER_LEFT" spacing="8"
          style="-fx-background-color: #eff6ff; -fx-background-radius: 8; -fx-padding: 12;">
        <Label text="ℹ️" style="-fx-font-size: 16px;"/>
        <Label text="Solo se mantienen las últimas 10 versiones. Las contraseñas están cifradas en la base de datos."
               wrapText="true"
               style="-fx-text-fill: #3b82f6; -fx-font-size: 13px;"
               HBox.hgrow="ALWAYS"/>
    </HBox>

    <!-- Tabla de historial -->
    <TableView fx:id="historyTable" VBox.vgrow="ALWAYS"
               style="-fx-background-radius: 8; -fx-border-radius: 8;">
        <columns>
            <TableColumn fx:id="dateColumn" text="Fecha de Cambio"/>
            <TableColumn fx:id="passwordColumn" text="Contraseña"/>
            <TableColumn fx:id="actionsColumn" text="Acciones"/>
        </columns>
        <placeholder>
            <Label text="No hay versiones anteriores de esta contraseña"
                   style="-fx-text-fill: #94a3b8; -fx-font-size: 14px;"/>
        </placeholder>
    </TableView>

    <!-- Botones -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <padding>
            <Insets top="5"/>
        </padding>
        <Button text="Cerrar" onAction="#handleClose" prefWidth="100"/>
    </HBox>
</VBox>
